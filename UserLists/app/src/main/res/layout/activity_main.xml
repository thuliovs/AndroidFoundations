<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Botão "Adicionar Utilizador" -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Adicionar Utilizador" />

    <!-- Outros botões -->
    <Button
        android:id="@+id/sortButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ordenar Utilizadores"
        />

    <Button
        android:id="@+id/toggleViewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alternar Modo"
        android:layout_marginTop="8dp" />

    <!-- Campo de pesquisa -->
    <EditText
        android:id="@+id/searchInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="Pesquisar Utilizador em tempo real"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <!-- Texto de contagem -->
    <TextView
        android:id="@+id/countTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total de Utilizadores: 0"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <!-- Lista -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />
</LinearLayout>