<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:id="@+id/root_layout">

    <!-- Botão para iniciar tarefa síncrona -->
    <Button
        android:id="@+id/start_sync_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarefa Síncrona"
        android:layout_margin="16dp" />

    <!-- Botão para iniciar tarefa assíncrona -->
    <Button
        android:id="@+id/start_async_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarefa Assíncrona"
        android:layout_margin="16dp" />

    <!-- Texto para status -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Estado da tarefa"
        android:textSize="18sp" />

    <!-- Botão para mudar fundo para vermelho -->
    <Button
        android:id="@+id/change_color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mudar Fundo para Vermelho"
        android:layout_margin="16dp" />

    <!-- Botão para mudar fundo para azul -->
    <Button
        android:id="@+id/change_color_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mudar Fundo para Azul"
        android:layout_margin="16dp" />

    <!-- Loader para tarefa -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>
