<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Texto "Hello World" -->
    <TextView
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- Icone Central -->
    <ImageView
        android:id="@+id/central_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/central_icon"
        android:scaleType="centerInside"
        android:layout_marginBottom="20dp"/>

    <!-- Cotão "Encrementar" -->
    <Button
        android:id="@+id/increment_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/button_text"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="#2c4167"
        android:layout_marginBottom="20dp"/>

    <!-- Texto do resultado -->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O resultado aparecerá aqui 👍"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"/>

    <!-- Texto com o numero de cliques -->
    <TextView
        android:id="@+id/result_click_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clicks"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>
</LinearLayout>